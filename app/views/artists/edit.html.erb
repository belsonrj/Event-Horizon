<h1 id="title">Edit Artist:</h1>
<h1 id="title"><%= @artist.name %></h1>
<hr>
<div class="box">
  <br>
  <br>
  <div>
    <%= form_for(@artist) do |f| %>
    <h2><%= f.label "Name" %></h2>
    <%= f.text_field :name %> 
    <h2><%= f.label "Genre" %></h2>
    <%= f.text_field :genre %>
    <h2><%= f.label "Times Seen" %></h2>
    <%= f.select :times_seen, (1..99) %>
    <h2><%= f.label "Met?" %></h2>
    <%= f.check_box :met %>
  </div>
<hr>
  <div>
    <h3><%= f.label "Create a New Venue:" %></h3>
    <h2><%= f.label "Venue Name:" %></h2>
    <input type="text" id="name" name="venue[name]" />
    <h2><%= f.label "Locale:" %></h2>
    <input type="text" id="locale" name="venue[locale]" />
  </div>
</div>

<div class="box">
  <h2>Venue attended:</h2>
    <div>
        <%= f.collection_check_boxes(:venue_ids, @user.venues.all, :id, :name) do |v| %>
          <p><%= v.check_box + v.text %></p>
        <% end %>
        <%= f.fields_for :venues, @artist.venues.build do |venue_fields| %>
        <% end %>
    </div>
</div>

<div class="button-at-top">
    <%= f.submit :class => "button" %>
    <% end %>
</div>
  
