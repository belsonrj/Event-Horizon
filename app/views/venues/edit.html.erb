<h1 id="title"><%= @venue.name %></h1>
<hr>
  <div class="box">
    <br>
    <br>
    <%= form_for(@venue) do |f| %>
      <span>
        <h4><%= f.label "Name:" %></h4>
        <%= f.text_field :name %>
        <h4><%= f.label "Locale:" %></h4>
        <%= f.text_field :locale %>
        <h4><%= f.label "Venue Type:" %></h4>
        <%= f.select :venue_type, [ nil, 'Bar', 'Small', 'Medium', 'Large', 'Arena', 'Festival', 'Amphitheater', 'Pavillion', 'Outdoor', 'Theatre']%>
      </span>
      <span>
        <h4><%= f.label "Layout" %></h4>
        <%= f.select :layout, [ nil, '1', '2', '3', '4', '5']%>
        <h4><%= f.label "Sound" %></h4>
        <%= f.select :sound, [ nil, '1', '2', '3', '4', '5']%>
        <h4><%= f.label "Comfort" %></h4>
        <%= f.select :comfort, [ nil, '1', '2', '3', '4', '5']%>
        <h4><%= f.label "Prices" %></h4>
        <%= f.select :prices, [ nil, '1', '2', '3', '4', '5']%>
      </span>
      <span>
        <h4><%= f.label "Venue Comments" %></h4>
        <%= f.text_area :content %>
      </span>
  </div>
  <div class="box">
      <h3><%= f.label "Create New Artist:" %></h3>
      <h4><%= f.label "Artist Name:" %></h2>
      <input type="text" id="name" name="artist[name]" />
      <h4><%= f.label "Genre:" %></h2>
      <input type="text" id="locale" name="artist[genre]" />
  </div>

  <div class="box">
    <div>
    <h3>Performance by:</h3>
    <%= f.collection_check_boxes(:artist_ids, @user.artists.all.sort_by(&:name), :id, :name) do |a| %>
        <p><%= a.check_box + a.text %></p>
        <% end %>
    <%= f.fields_for :artists, @venue.artists.build do |artist_fields| %>
    <% end %>
    </div>
  </div>

  <div class="button-at-top">
    <%= f.submit :class => "button"%>
    <% end %>
  </div>