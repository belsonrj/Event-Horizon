<!DOCTYPE html>

<html>
  
  <%= render partial: "users/form", locals: {user: @user} %>
  <body>
    <h1 class="title">Event Horizon</h1>

    <div class="login-box">
      <h1>Join Event-Horizon!</h1>
      <%= form_for(@user) do |f| %>
      
      <h2><%= f.label :username%></h3>
      <%= f.text_field :username%><br><br>

      <h2><%= f.label :password%></h2>
